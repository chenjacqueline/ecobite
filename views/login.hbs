<div class="login-wrapper">
  <form class="login-form-container" action="/login" method="POST">
    <h1>Welcome back!</h1>
    <label for="email">Email address:</label><br />
    <input type="text" name="email" id="email-field"><br />

    <label for="password">Password:</label><br />
    <input type="password" name="password" id="password-field"><br />

    <button class="solid">Log in</button>
  </form>

  {{#if errorMessage}}
  <caption>{{errorMessage}}</caption>
  {{/if}}
</div>